# Run database backups every hour
0 * * * * root /db-backups.sh >> /var/log/cron.log 2>&1

# Run file backups at 11pm each night
0 23 * * * root /file-backups.sh >> /var/log/cron.log 2>&1

# Run backup clean up every month on 10th day
0 23 10 * * root /clean.sh >> /var/log/cron.log 2>&1

# We need a blank line here for it to be a valid cron file
